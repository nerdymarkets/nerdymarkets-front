{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "babelOptions": {
      "presets": ["next/babel"]
    }
  },
  "rules": {
    "eqeqeq": "error",
    "curly": "error",
    "no-console": "warn",
    "no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],
    "no-multiple-empty-lines": ["warn", { "max": 1 }],
    "semi": ["error", "always"],
    "quotes": "off",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
